<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_background_cream_white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/banner_image_profile"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:background="@color/color_app_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/_15ssp"
            android:layout_marginTop="@dimen/_30ssp"
            android:orientation="horizontal">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/image_profile"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_100sdp"
                android:background="@drawable/rectangle_white_border"
                app:roundBottomEnd="true"
                app:roundBottomLeft="true"
                app:roundBottomRight="true"
                app:roundBottomStart="true"
                app:roundingBorderColor="@color/color_white"
                app:roundingBorderWidth="@dimen/_3sdp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.app.barber.views.CustomTextView
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_10ssp"
                    android:paddingRight="@dimen/_10ssp"
                    android:text="User Name"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/_13ssp" />

                <com.app.barber.views.CustomTextView
                    android:id="@+id/user_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_10ssp"
                    android:paddingRight="@dimen/_10ssp"
                    android:paddingTop="@dimen/_5sdp"
                    android:text="Stylist"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/_12ssp" />

                <RatingBar
                    android:id="@+id/barber_ratings"
                    style="@style/Base.Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10ssp"
                    android:numStars="5"
                    android:progressTint="@color/color_yellow" />

            </LinearLayout>

            <ImageView
                android:id="@+id/barber_status"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_margin="@dimen/_10ssp"
                android:background="@drawable/super_barber" />
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>