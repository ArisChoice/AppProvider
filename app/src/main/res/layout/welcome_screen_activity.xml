<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_app_background"
    android:orientation="vertical">

    <include layout="@layout/layout_common_header_view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/color_white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/type_barber_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10ssp"
                android:background="@drawable/rectangle_grey_border"
                android:gravity="center_vertical"
                android:elevation="@dimen/_5sdp"
                android:padding="@dimen/_5ssp">

                <ImageView
                    android:id="@+id/img_type_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10ssp"
                    android:src="@drawable/barber_icon_normal"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.app.barber.views.CustomTextView
                        android:id="@+id/text_type_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/str_barber"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_15ssp" />

                    <com.app.barber.views.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/str_barber_desc"
                        android:textColor="@color/color_light_grey_blue" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/img_check_type_one"
                    android:layout_width="@dimen/_15ssp"
                    android:layout_height="@dimen/_15ssp"
                    android:layout_margin="@dimen/_5sdp"
                    android:src="@drawable/icon_copy"
                    android:visibility="gone" />
            </LinearLayout>
            <!--Type two Layout-->
            <LinearLayout
                android:id="@+id/type_callout_barber_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10ssp"
                android:background="@drawable/rectangle_grey_border"
                android:gravity="center_vertical"
                android:elevation="@dimen/_5sdp"
                android:padding="@dimen/_5ssp">

                <ImageView
                    android:id="@+id/img_type_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10ssp"
                    android:src="@drawable/callout_barber_icon_normal"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.app.barber.views.CustomTextView
                        android:id="@+id/text_type_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/str_callout_barber"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_15ssp" />

                    <com.app.barber.views.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/str_callout_barber_desc"
                        android:textColor="@color/color_light_grey_blue" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/img_check_type_two"
                    android:layout_width="@dimen/_15ssp"
                    android:layout_height="@dimen/_15ssp"
                    android:layout_margin="@dimen/_5sdp"
                    android:src="@drawable/icon_copy"
                    android:visibility="gone" />
            </LinearLayout>
            <!--Type three layout-->
            <LinearLayout
                android:id="@+id/type_tranee_barber_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10ssp"
                android:background="@drawable/rectangle_grey_border"
                android:gravity="center_vertical"
                android:elevation="@dimen/_5sdp"
                android:padding="@dimen/_5ssp">

                <ImageView
                    android:id="@+id/img_type_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10ssp"
                    android:src="@drawable/trainee_normal"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.app.barber.views.CustomTextView
                        android:id="@+id/text_type_three"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/str_trainee"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_15ssp" />

                    <com.app.barber.views.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/str_trainee_barber_desc"
                        android:textColor="@color/color_light_grey_blue" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/img_check_type_three"
                    android:layout_width="@dimen/_15ssp"
                    android:layout_height="@dimen/_15ssp"
                    android:layout_margin="@dimen/_5sdp"
                    android:src="@drawable/icon_copy"
                    android:visibility="gone" />
            </LinearLayout>


        </LinearLayout>

        <com.app.barber.views.CustomTextView
            android:id="@+id/continue_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10ssp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/rectangle_blue_drawable"
            android:gravity="center"
            android:padding="@dimen/_10ssp"
            android:text="@string/str_continue"
            android:textColor="@color/color_white"
            android:textSize="@dimen/_14ssp" />

        <!-- <ImageView
             android:id="@+id/continue_btn"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="right|bottom"
             android:layout_marginBottom="@dimen/_30ssp"
             android:layout_marginRight="@dimen/_20ssp"
             android:layout_marginTop="@dimen/_10ssp"
             android:src="@drawable/arrow_button" />-->
    </LinearLayout>


</LinearLayout>