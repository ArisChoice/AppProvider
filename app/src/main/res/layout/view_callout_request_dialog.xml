<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_white_border"
    android:orientation="vertical"
    android:padding="@dimen/_10ssp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.app.barber.views.CustomTextView
            style="@style/bold_type_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_10ssp"
            android:paddingRight="@dimen/_10ssp"
            android:paddingTop="@dimen/_10ssp"
            android:text="@string/str_callout_request"
            android:textColor="@color/color_black"
            android:textSize="@dimen/_14ssp" />

        <com.app.barber.views.CustomTextView
            android:id="@+id/time_remaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_10ssp"
            android:paddingLeft="@dimen/_15ssp"
            android:paddingTop="@dimen/_10ssp"
            android:text="0.00 hrs left"
            android:textColor="@color/color_black" />

    </LinearLayout>
    <include layout="@layout/divider_view_grey" />

    <include layout="@layout/layout_customer_view" />

    <include layout="@layout/layout_booking_info_view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.app.barber.views.CustomTextView
            android:id="@+id/reject_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10ssp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_grey_border"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:text="@string/str_reject"
            android:textColor="@color/color_black"
            android:textSize="@dimen/_14ssp" />

        <com.app.barber.views.CustomTextView
            android:id="@+id/accept_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10ssp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_blue_drawable"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:text="@string/str_accept"
            android:textColor="@color/color_white"
            android:textSize="@dimen/_14ssp" />
    </LinearLayout>

</LinearLayout>