<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_white_background_new"
    android:orientation="vertical"
    android:padding="@dimen/_5sdp">

    <com.archit.calendardaterangepicker.customviews.DateRangeCalendarView
        android:id="@+id/calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        custom:disable_date_color="#ABABAB"
        custom:enable_past_date="true"
        custom:header_bg="@color/color_white"
        custom:range_color="@color/color_sky_blue"
        custom:selected_date_circle_color="@color/selected_date_circle_color"
        custom:text_size_date="@dimen/_12sdp"
        custom:text_size_title="@dimen/_14sdp"
        custom:text_size_week="@dimen/_12sdp"
        custom:title_color="@color/color_black"></com.archit.calendardaterangepicker.customviews.DateRangeCalendarView>

    <com.app.barber.views.CustomTextView
        android:id="@+id/cnfrm_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/rectangle_blue_drawable"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:text="@string/str_cnfrm_"
        android:textColor="@color/color_white"
        android:textSize="@dimen/_14sdp" />
</LinearLayout>
