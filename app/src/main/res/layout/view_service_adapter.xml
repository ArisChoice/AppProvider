<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:background="@color/color_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5ssp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/delete_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10ssp"
            android:src="@drawable/cross_bk_copy"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.app.barber.views.CustomTextView
                android:id="@+id/service_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:maxLines="2"
                android:paddingLeft="@dimen/_10ssp"
                android:text="Save"
                android:textColor="@color/color_black"
                android:textSize="@dimen/_11ssp" />

            <com.app.barber.views.CustomTextView
                android:id="@+id/service_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingLeft="@dimen/_10ssp"
                android:text="20m"
                android:textColor="@color/color_light_grey_blue"
                android:textSize="@dimen/_11ssp" />
        </LinearLayout>

        <com.app.barber.views.CustomTextView
            android:id="@+id/service_for"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_dark_blue_drawable"
            android:gravity="left"
            android:paddingLeft="@dimen/_5ssp"
            android:paddingTop="@dimen/_1sdp"
            android:paddingRight="@dimen/_5sdp"
            android:paddingBottom="@dimen/_1sdp"
            android:text="@string/str_walk_in"
            android:textColor="@color/color_white"
            android:textSize="@dimen/_10ssp" />

        <com.app.barber.views.CustomTextView
            android:id="@+id/service_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="@dimen/_10ssp"
            android:text="$12"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_11ssp" />

        <ImageView
            android:id="@+id/service_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="@dimen/_10ssp"
            android:src="@drawable/check"
            android:textColor="@color/colorPrimary"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>