<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_background_cream_white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/banner_image_profile"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:background="@color/color_app_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/_15ssp"
            android:layout_marginTop="93dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:background="@drawable/rectangle_tranparent"
                android:layout_height="wrap_content">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/image_profile"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_110sdp"
                    android:background="@drawable/rectangle_white_border"
                    app:roundingBorderColor="@color/color_white"
                    app:roundingBorderWidth="@dimen/_3sdp" />

                <ImageView
                    android:id="@+id/change_profile_image_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/camera_white" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="@dimen/_35ssp"
                android:background="@drawable/rectangle_tranparent"
                android:orientation="vertical">

                <com.app.barber.views.CustomTextView
                    android:id="@+id/change_banner_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:drawableLeft="@drawable/camera_white"
                    android:drawablePadding="@dimen/_10ssp"
                    android:gravity="right"
                    android:paddingBottom="@dimen/_10ssp"
                    android:paddingLeft="@dimen/_10ssp"
                    android:paddingRight="@dimen/_10ssp"
                    android:text="@string/str_change_cover"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/_13ssp" />

            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>