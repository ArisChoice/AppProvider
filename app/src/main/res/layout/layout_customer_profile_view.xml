<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/customer_image"
            android:layout_width="@dimen/_55ssp"
            android:layout_height="@dimen/_55ssp"
            android:layout_margin="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            app:placeholderImage="@drawable/profile_copy"
            app:roundAsCircle="true"
            app:roundingBorderColor="@color/color_grey_new"
            app:roundingBorderWidth="@dimen/_1ssp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp">

            <com.app.barber.views.CustomTextView
                android:id="@+id/customer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_select_customer"
                android:textColor="@color/color_black"
                android:textSize="@dimen/_14sdp" />

            <com.app.barber.views.CustomTextView
                android:id="@+id/customer_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color_grey"
                android:textSize="@dimen/_13sdp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/select_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10ssp"
            android:src="@drawable/arrow_right_copy"
            android:tint="@color/color_grey" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>