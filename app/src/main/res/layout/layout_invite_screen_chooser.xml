<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background_cream_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/layout_common_toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.app.barber.views.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10ssp"
                android:text="@string/str_calender_sync_desc"
                android:textColor="@color/color_grey" />

            <include layout="@layout/divider_view_grey" />

            <LinearLayout
                android:id="@+id/lay_none_calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <com.app.barber.views.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/_10ssp"
                    android:text="@string/str_none"
                    android:textColor="@color/color_grey"
                    android:textSize="@dimen/_12ssp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:button="@drawable/custom_check_box"
                    android:drawableTint="@color/color_grey"
                    android:padding="@dimen/_10ssp" />
            </LinearLayout>

            <include layout="@layout/divider_view_grey" />

            <LinearLayout
                android:id="@+id/lay_google_calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <com.app.barber.views.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/_10ssp"
                    android:text="@string/str_google_calender"
                    android:textColor="@color/color_grey"
                    android:textSize="@dimen/_12ssp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:button="@drawable/custom_check_box"
                    android:drawableTint="@color/color_grey"
                    android:padding="@dimen/_10ssp" />
            </LinearLayout>

            <include layout="@layout/divider_view_grey" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>