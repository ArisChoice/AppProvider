<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background_cream_white"
    android:orientation="vertical">

    <include layout="@layout/layout_common_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="@dimen/_5ssp"
                    android:theme="@style/TextLabel"
                    tools:layout_editor_absoluteX="120dp"
                    tools:layout_editor_absoluteY="120dp">

                    <com.app.barber.views.CustomEditText
                        android:id="@+id/edtxt_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:focusableInTouchMode="true"
                        android:hint="@string/str_user_name_"
                        android:inputType="textNoSuggestions"
                        android:lines="1"
                        android:maxLength="50"
                        android:padding="@dimen/_10ssp"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/color_white"
                        android:textSize="@dimen/_12ssp" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="@dimen/_5ssp"
                    android:theme="@style/TextLabel"
                    tools:layout_editor_absoluteX="120dp"
                    tools:layout_editor_absoluteY="120dp">

                    <com.app.barber.views.CustomEditText
                        android:id="@+id/edtxt_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:focusableInTouchMode="true"
                        android:hint="@string/str_email_address"
                        android:inputType="textNoSuggestions"
                        android:lines="1"
                        android:maxLength="50"
                        android:padding="@dimen/_10ssp"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/color_white"
                        android:textSize="@dimen/_12ssp" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="@dimen/_5ssp"
                    android:theme="@style/TextLabel"
                    tools:layout_editor_absoluteX="120dp"
                    tools:layout_editor_absoluteY="120dp">

                    <com.app.barber.views.CustomEditText
                        android:id="@+id/edtxt_phone_numbere"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:focusableInTouchMode="true"
                        android:hint="@string/str_phone_number"
                        android:inputType="textNoSuggestions|phone"
                        android:lines="1"
                        android:maxLength="50"
                        android:padding="@dimen/_10ssp"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/color_white"
                        android:textSize="@dimen/_12ssp" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="@dimen/_5ssp"
                    android:theme="@style/TextLabel"
                    tools:layout_editor_absoluteX="120dp"
                    tools:layout_editor_absoluteY="120dp">

                    <com.app.barber.views.CustomEditText
                        android:id="@+id/edtxt_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:focusableInTouchMode="true"
                        android:hint="@string/str_password"
                        android:inputType="textNoSuggestions|textPassword"
                        android:lines="1"
                        android:maxLength="50"
                        android:padding="@dimen/_10ssp"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/color_white"
                        android:textSize="@dimen/_12ssp" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <com.app.barber.views.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_dark_grey"
                android:padding="@dimen/_8ssp"
                android:text="@string/str_location"
                android:textColor="@color/color_white"
                android:textSize="@dimen/_13ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="@dimen/_5ssp"
                    android:theme="@style/TextLabel"
                    tools:layout_editor_absoluteX="120dp"
                    tools:layout_editor_absoluteY="120dp">

                    <com.app.barber.views.CustomEditText
                        android:id="@+id/edtxt_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:focusableInTouchMode="true"
                        android:hint="@string/str_your_address"
                        android:inputType="textNoSuggestions"
                        android:lines="1"
                        android:maxLength="50"
                        android:padding="@dimen/_10ssp"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/color_white"
                        android:textSize="@dimen/_12ssp" />
                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="@dimen/_5ssp"
                        android:layout_weight="1"
                        android:theme="@style/TextLabel"
                        tools:layout_editor_absoluteX="120dp"
                        tools:layout_editor_absoluteY="120dp">

                        <com.app.barber.views.CustomEditText
                            android:id="@+id/edtxt_city"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:focusableInTouchMode="true"
                            android:hint="@string/str_city"
                            android:inputType="textNoSuggestions"
                            android:lines="1"
                            android:maxLength="50"
                            android:padding="@dimen/_10ssp"
                            android:singleLine="true"
                            android:textColor="@color/colorPrimary"
                            android:textColorHint="@color/color_white"
                            android:textSize="@dimen/_12ssp" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="@dimen/_5ssp"
                        android:layout_weight="1"
                        android:theme="@style/TextLabel"
                        tools:layout_editor_absoluteX="120dp"
                        tools:layout_editor_absoluteY="120dp">

                        <com.app.barber.views.CustomEditText
                            android:id="@+id/edtxt_pin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:focusableInTouchMode="true"
                            android:hint="@string/str_post_code"
                            android:inputType="textNoSuggestions"
                            android:lines="1"
                            android:maxLength="50"
                            android:padding="@dimen/_10ssp"
                            android:singleLine="true"
                            android:textColor="@color/colorPrimary"
                            android:textColorHint="@color/color_white"
                            android:textSize="@dimen/_12ssp" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <com.app.barber.views.CustomTextView
                    android:id="@+id/save_Btn_my_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10ssp"
                    android:background="@drawable/rectangle_blue_drawable"
                    android:gravity="center"
                    android:padding="@dimen/_8ssp"
                    android:text="@string/str_save"
                    android:textAllCaps="true"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/_13ssp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>