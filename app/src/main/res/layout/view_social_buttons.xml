<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_10ssp"
    android:layout_marginTop="@dimen/_20ssp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_10ssp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/_100ssp"
            android:layout_height="@dimen/_1ssp"
            android:background="@color/color_light_grey_blue"
            android:gravity="center_vertical" />

        <com.app.barber.views.CustomTextView
            android:layout_width="@dimen/_100ssp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/str_social_login"
            android:textColor="@color/color_light_grey_blue"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:layout_width="@dimen/_100ssp"
            android:layout_height="@dimen/_1ssp"
            android:background="@color/color_light_grey_blue"
            android:gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_social"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10ssp"
        android:gravity="center">

        <ImageView
            android:id="@+id/imgVw_fb_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5ssp"
            android:src="@drawable/fb_copy" />

        <ImageView
            android:id="@+id/imgVw_google_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5ssp"
            android:src="@drawable/twitter_copy" />

        <ImageView
            android:id="@+id/imgVw_twitter_btn_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5ssp"
            android:src="@drawable/google_copy" />
    </LinearLayout>

</LinearLayout>