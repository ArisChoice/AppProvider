<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background_cream_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/layout_common_header_view" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/zone_recyclar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10ssp"
                android:background="@color/color_white"
                android:paddingBottom="@dimen/_10ssp"
                android:paddingTop="@dimen/_10ssp"></android.support.v7.widget.RecyclerView>

            <include layout="@layout/layout_common_recyclay_view" />

        </LinearLayout>

        <com.app.barber.views.CustomTextView
            android:id="@+id/continue_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10ssp"
            android:background="@drawable/rectangle_blue_drawable"
            android:gravity="center"
            android:padding="@dimen/_10ssp"
            android:text="@string/str_continue"
            android:textColor="@color/color_white"
            android:textSize="@dimen/_14sdp"
            android:visibility="gone" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>